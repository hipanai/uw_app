# Upwork Auto-Apply Pipeline - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC (Required)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxx

# =============================================================================
# HEYGEN VIDEO GENERATION (Required for video cover letters)
# =============================================================================
HEYGEN_API_KEY=xxx
HEYGEN_AVATAR_ID=xxx

# =============================================================================
# SLACK INTEGRATION (Required for approval workflow)
# =============================================================================
SLACK_BOT_TOKEN=xoxb-xxx
SLACK_SIGNING_SECRET=xxx
SLACK_APPROVAL_CHANNEL=C0123456789

# =============================================================================
# GOOGLE SHEETS (Required for data storage)
# =============================================================================
# Main pipeline tracking sheet
UPWORK_PIPELINE_SHEET_ID=xxx

# Deduplication tracking sheet
UPWORK_PROCESSED_IDS_SHEET_ID=xxx

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
# Minimum pre-filter score (0-100) to proceed with full processing
PREFILTER_MIN_SCORE=70

# =============================================================================
# OPTIONAL - EXISTING SERVICES
# =============================================================================
# These may already be configured if using existing scripts
# OPENAI_API_KEY=xxx
# APIFY_API_TOKEN=xxx
# GOOGLE_MAPS_API_KEY=xxx
